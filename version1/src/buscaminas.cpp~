using namespace std;

int main(){
  int filas, columnas, cantidad_bombas;

  cout << "Introduzca las filas: ";
  cin >> filas;
  cout << "\nIntroduzca las columnas: ";
  cin >> columnas;
  cout << "\nIntroduzca las minas: ";
  cin >> cantidad_bombas;

  CampoMinas tablero(filas, columnas, cantidad_bombas);
